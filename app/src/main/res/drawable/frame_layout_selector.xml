<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FDC35A"/> <!-- Pressed state color -->
            <corners android:radius="15dp"/>
            <stroke android:width="0.5dp" android:color="#000000"/> <!-- Outline for pressed state -->
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="#FDC35A"/> <!-- Selected state color -->
            <corners android:radius="15dp"/>
            <stroke android:width="0.5dp" android:color="#000000"/> <!-- Outline for selected state -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FDDB9D"/> <!-- Default state color -->
            <corners android:radius="15dp"/>
            <stroke android:width="0.5dp" android:color="#000000"/> <!-- Outline for default state -->
        </shape>
    </item>
</selector>
